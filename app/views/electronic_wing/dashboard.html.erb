<% if @upload_files.present? %>
  <div class="item_wrap">
    <div class="item">
      <div class="table-responsive">
        <table id="static-table" class="table table-striped table-hover dt-responsive display nowrap " cellspacing="0">
          <thead>
            <tr>
              <th>S.No:</th>
              <th>Institute Name</th>
              <th>Activity / Project type</th>
              <th>Title</th>
              <th>Location</th>
              <th>Date</th>
              <th>Scientist</th>
              <th>Posted Date</th>
              <th>Description</th>
              <th>Attachment</th>
              <th>Approve / Reject</th>
            </tr>
          </thead>
          <tbody>
            <% @upload_files.each_with_index do |upload_file, index| %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= upload_file.institute.name if upload_file.institute.present? %></td>
                <td><%= upload_file.upload_type %></td>
                <td><%= upload_file.title %></td>
                <td><%= upload_file.location %></td>
                <td><%= upload_file.date.in_time_zone("Kolkata").strftime("%d-%m-%Y") %></td>
                <td><%= upload_file.scientist_name %></td>
                <td><%= upload_file.created_at.in_time_zone("Kolkata").strftime("%d-%m-%Y") %></td>
                <td><%= upload_file.description %></td>
                <td>
                  <% if upload_file.file.attached? %>
                    <%= link_to 'Download', upload_file.file, class: "btn btn-success btn-sm", target: '_blank' %>
                  <% else %>
                    <%#= link_to 'Download', "#", method: :get, class: "btn btn-success btn-sm" %>
                  <% end %>
                  <%#= link_to 'Download', upload_file_path(format: :zip, id: upload_file.id), method: :get, class: "btn btn-success btn-sm" %>
                  <%#= link_to upload_file.file.filename, upload_file.file, class: "btn btn-success btn-sm", target: '_blank' %>
                </td>
                <td>
                  <%= link_to 'Approve', upload_file_status_update_path(status: 'Approved', id: upload_file.id), class: 'btn btn-success btn-sm', :data => {:confirm => 'Are you sure you want to Approve?'} %>
                  <%= link_to "Reject", add_reason_path(document_id: upload_file.id), class: 'btn btn-danger btn-sm', style: "background-color: #f46464 !important; border-color: #f46464;", remote: true %>
                  <%#= link_to 'Reject', upload_file_status_update_path(status: 'Rejected', id: upload_file.id),  class: 'btn btn-danger btn-sm', style: "background-color: #f46464 !important; border-color: #f46464;", :data => {:confirm => 'Are you sure you want to reject?'} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% elsif !@upload_files.nil? %>
  <p class="alert alert-warning">No records found</p>
<% end %>
<div class="add_reason_content"></div>

<script>
$(document).ready( function () {
  $('#static-table').DataTable( {
    responsive: true
  });
});
</script>
